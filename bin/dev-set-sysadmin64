#!/usr/bin/env bash
#
# Dev / Set / SysAdmin64 / Setup shell environment
#
# * Version: 1.0.0
#

#
# Imports
#

# shellcheck source-path=bin
source ./bin/dev-set ||
  { echo 'dev-set:Error: unable to load dev environment' 2>&1 && return 1; }

# shellcheck source-path=bin
source "./bin/dev-env-sysadmin64" ||
  { echo 'dev-set:Error: unable to load SysAdmin64 environment' 2>&1 && return 1; }

#
# Globals
#

# Set terminal type
export TERM='tmux-256color'

# Set locale
export LC_ALL='en_IN.UTF-8'
export LANG='en_IN.UTF-8'

# Add SysAdmin64 scripts to the search path
PATH+=":${DEV_PATH_SRC}/lnav"

# Set common tools
export EDITOR='/usr/bin/nvim'
export PAGER='/usr/bin/bat'

#
# Main
#

:
