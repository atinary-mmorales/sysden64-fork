#
# Globals
#
# * Use .env file to override values
#

# Env / SysAdmin64 / Path for Configuration files
export DEV_ENV_SYSADMIN64_LOCAL_PATH_ETC="${DEV_PATH_ROOT}/etc"
# Env / SysAdmin64 / Path for Vault
export DEV_ENV_SYSADMIN64_LOCAL_PATH_VAULT="${DEV_PATH_ROOT}/vault"
# Env / SysAdmin64 / Path for Logs
export DEV_ENV_SYSADMIN64_LOCAL_PATH_LOGS="${DEV_PATH_ROOT}/logs"
# Env / SysAdmin64 / Registry for lab and testing containers
export DEV_ENV_SYSADMIN64_REGISTRY="${DEV_ENV_SYSADMIN64_REGISTRY:-ghcr.io/automation64}"
# Env / SysAdmin64 / Local home
export DEV_ENV_SYSADMIN64_LOCAL_PATH_HOME="${DEV_PATH_VAR}/home/sa"
# Env / SysAdmin64 / Container path for project mounts
export DEV_ENV_SYSADMIN64_CONTAINER_PATH_ROOT='/sa'
export DEV_ENV_SYSADMIN64_CONTAINER_PATH_TEST='/test'
# Lab / SysAdmin64 / Container path for project mounts
export DEV_LAB_SYSADMIN64_CONTAINER_PATH_ENTRYPOINT="${DEV_ENV_SYSADMIN64_CONTAINER_PATH_ROOT}/bin/dev-lab-sysadmin64-entrypoint"
# Lab / SysAdmin64 / Default image
export DEV_LAB_SYSADMIN64_CONTAINER="${DEV_LAB_SYSADMIN64_CONTAINER:-toolbox/oraclelinux-9-toolbox-k8s}"
# Lab / SysAdmin64 / Container user shell
export DEV_LAB_SYSADMIN64_CONTAINER_SHELL='/bin/zsh'

# Lib / SysAdmin64 / GIT repositories
export DEV_LIB_SYSADMIN64_GIT_OMZ='https://github.com/ohmyzsh/ohmyzsh.git'
export DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS=''
DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS+=' https://github.com/marlonrichert/zsh-autocomplete.git'
DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS+=' https://github.com/zsh-users/zsh-autosuggestions.git'
DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS+=' https://github.com/zsh-users/zsh-syntax-highlighting.git'
DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS+=' https://github.com/zsh-users/zsh-completions.git'
DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS+=' https://github.com/Aloxaf/fzf-tab.git'
DEV_LIB_SYSADMIN64_GIT_ZSH_PLUGINS+=' https://github.com/joshskidmore/zsh-fzf-history-search.git'
export DEV_LIB_SYSADMIN64_GIT_ZSH_THEMES=''
DEV_LIB_SYSADMIN64_GIT_ZSH_THEMES+=' https://github.com/romkatv/powerlevel10k.git'

#
# Locals
#
# * Use .local file or CICD variables to override values
#

# Lab / SysAdmin64 / Container user
export DEV_LAB_SYSADMIN64_CONTAINER_USER_NAME="${DEV_LAB_SYSADMIN64_CONTAINER_USER_NAME:-${USER}}"
export DEV_LAB_SYSADMIN64_CONTAINER_USER_UID="${DEV_LAB_SYSADMIN64_CONTAINER_USER_UID:-${UID}}"

# Env / SysAdmin64 / Debug mode for SysAdmin64 scripts. Set to YES to enable
export DEV_ENV_SYSADMIN64_DEBUG="${DEV_ENV_SYSADMIN64_DEBUG:-}"

#
# Secrets
#
# * Use .secrets file or CICD secrets to override values
#
